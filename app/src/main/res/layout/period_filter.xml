<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_top_container_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DFDFDF"
    android:paddingBottom="2dp"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="2dp"
    android:visibility="visible">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/period"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center"
        android:fontFamily="@font/roboto_regular"
        app:fontFamily="@font/roboto_regular"
        android:text="@string/search_period"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_toEndOf="@+id/period"
        android:layout_toRightOf="@+id/period"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/flash_btn"
        android:layout_toStartOf="@+id/flash_btn"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:weightSum="100">

       <!-- <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/period_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:gravity="center"
            android:text="@string/search_period_from"
            android:textSize="13sp" />-->

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/period_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:background="@color/white"
            android:clickable="true"
            android:fontFamily="@font/roboto_regular"
            app:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/search_period_from"
            android:textSize="13sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dash_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="14"
            android:clickable="true"
            android:fontFamily="@font/roboto_regular"
            app:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:scaleType="center"
            android:text="-"
            android:textSize="13sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/period_stop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:background="@color/white"
            android:fontFamily="@font/roboto_regular"
            app:fontFamily="@font/roboto_regular"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/search_period_to"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/flash_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="2dp"
        android:clickable="true"
        android:gravity="center"
        android:scaleType="center"
        android:src="@drawable/btn_flash_icon_selector" />

    <!--
        <ImageView
            android:id="@+id/action_settings_btn"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/action_settings"
            android:background="#FFFFFF"
            android:scaleType="center"
            android:gravity="center"
            android:layout_width="@dimen/activity_top_container_settings_btn_width"
            android:layout_alignParentRight="true"
            />-->
</RelativeLayout>
