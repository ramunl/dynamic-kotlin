<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/android:selectableItemBackground"
    android:minHeight="48dp">
    <!--android:background="@color/white"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_push_feeds_selected_image_view"
        android:layout_toStartOf="@+id/item_push_feeds_selected_image_view"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_push_feeds_bubble_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/menu_margin_left"
            android:paddingLeft="@dimen/menu_margin_left"
            android:src="@drawable/bubble_orange" />

        <ImageView
            android:id="@+id/item_push_feeds_state_image_view"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:paddingLeft="@dimen/menu_margin_left"
            android:paddingRight="@dimen/menu_margin_left" />

        <TextView
            android:id="@+id/item_push_feeds_text_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/menu_item_height"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="@dimen/menu_margin_left"
            android:textColor="@color/black_87"
            android:textSize="18sp"
            tools:text="Menu item"
            android:paddingStart="@dimen/menu_margin_left" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_push_feeds_selected_image_view"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/menu_margin_left"
        android:paddingRight="@dimen/menu_margin_left"
        android:src="@drawable/ic_check_orange" />

</RelativeLayout>